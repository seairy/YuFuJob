<div class="pageheader">
  <h2><i class="fa fa-file-text-o"></i> 系统管理 <span>查看管理员</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">管理员信息</h4>
    </div>
    <div class="panel-body panel-body-nopadding">
      <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'administrator.account' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @administrator.account, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'administrator.name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @administrator.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'administrator.available' %></label>
          <div class="col-sm-6">
            <div class="mt5"><%= brac_styled_boolean @administrator.available? %></div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'administrator.last_signined_at' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, brac_datetime(@administrator.last_signined_at), readonly: true, class: 'form-control' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to '返回管理员列表', cms_administrators_path, class: 'btn btn-default' %>&nbsp;
      <%= link_to '编辑', edit_cms_administrator_path(@administrator), class: 'btn btn-default' %>&nbsp;
    </div>
  </div>
</div>